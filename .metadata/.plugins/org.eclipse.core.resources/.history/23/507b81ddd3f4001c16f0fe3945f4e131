	public void windowIconified(WindowEvent e) {
	}

	public void windowOpened(WindowEvent e) {
		if (e.getSource() == this) {
			windowOpenedThis(e);
		}
	}

	protected void windowOpenedThis(WindowEvent e) {
		iniciarConteo();
	}

	public void actionPerformed(ActionEvent e) {
	}

	private void validarAcceso() {
		String user, clave;

		user = getUsuario();
		clave = getClave();

		if (user == null || clave == null) {
			return;
		} else {
			usuario = gUser.validarAcceso(user, clave);
			// validar el resultado del proceso
			if (usuario == null) {
				mensajeError("Usuario y/o pasword incorrecto");
				txtUsuario.setText("");
				txtClave.setText("");
			} else {
				cargarBarraProgreso();
			}
		}
	}

	private void cargarBarraProgreso() {
		FrmPreLoader p = new FrmPreLoader();
		p.setVisible(true);
		this.dispose();
		p.setLocationRelativeTo(this);
	}

	private String getClave() {
		String clave;
//		if (txtClave.getPassword().length == 0) {
//			mensajeError("El campo de la clave se encuentra vacío");
//			txtClave.requestFocus();
//			txtClave.setText("");
//		} else /* if (txtClave.getPassword().toString().matches(Validaciones.CLAVE)) */ {
		clave = String.valueOf(txtClave.getPassword());
//		}
		return clave;
	}

	private String getUsuario() {
		String user = null;
//		if (txtUsuario.getText().trim().length() == 0) {
//			mensajeError("El campo Usuario se encuentra vacío");
//			txtUsuario.requestFocus();
//			txtUsuario.setText("");
//			user = null;
//		} else {
		user = txtUsuario.getText().trim();
//		}
		return user;
	}

	private void mensajeError(String msj) {
		JOptionPane.showMessageDialog(this, msj, "Error", 0);

	}
}
