	void ingresar() {
		String cod, prod;
		int cant;
		double pre;
		int tipo;

		cod = leerCodigo();
		prod = leerProducto();
		cant = leerCantidad();
		pre = leerPrecio();
		tipo = leerTipo();
		// validar
		if (pre == -1 || cant == -1 || tipo == 0 || prod == null || cod == null) {
			// mostrar ventana Error
			return;
		} else {
			// mostrar la informaci�n en la tabla
			Object fila[] = { cod, prod, pre, cant };
			model.addRow(fila);
		}
	}

	private String leerCodigo() {
		// Requerimiento : P0001 � p0001
		String cod = null;

		// Requerimiento P0001 o p0001

		if (txtCodigo.getText().trim().length() == 0) {
			mensajeError("Ingresar el codigo del producto");
			txtCodigo.setText("");
			txtCodigo.requestFocus();
			cod = null;
		}
		else if (txtCodigo.getText().trim().matches(Validaciones.COD_PRODUCTO)) {
			cod = txtCodigo.getText();
		}
		else {
			mensajeError("El formato del codigo debe ser como P0001 o p0001");
			txtCodigo.setText("");
			txtCodigo.requestFocus();
			cod = null;
		}

		return cod;
	}

	String leerProducto() {
		// solo texto 3 a 15 caracteres
		String prod = null;
		if (txtProducto.getText().trim().length() == 0) {
			mensajeError("Ingresar el producto");
			txtProducto.requestFocus();
		} else if (txtProducto.getText().trim().matches(Validaciones.TEXTO)) {
			prod = txtProducto.getText().trim();
		} else {
			mensajeError("Error en el formato de ingreso");
			txtProducto.setText("");
			txtProducto.requestFocus();
			prod = null;
		}
		return prod;
	}

	int leerTipo() {
		int tipo;
		tipo = cboTipo.getSelectedIndex();
		if (tipo == 0) {
			mensajeError("Seleccione un tipo");
		}
		return tipo;
	}

	int leerCantidad() {
		int cant = -1;
		// No ingresan valores
		if (txtCantidad.getText().trim().length() == 0) {
			mensajeError("Ingresar la cantidad de productos");
		} else {
			try {
				cant = Integer.parseInt(txtCantidad.getText());
				if (cant <= 0) {
					mensajeError("Ingresar cantidad mayor a 0");
					txtCantidad.setText("");
					txtCantidad.requestFocus();
					cant = -1;
				}
			} catch (NumberFormatException e) {
				mensajeError("Ingresar valores enteros");
				txtCantidad.setText("");
				txtCantidad.requestFocus();
				cant = -1;

			}

		}

		return cant;
	}

	double leerPrecio() {
		double prec = -1;
		// no ingresan valores
		if (txtPrecio.getText().trim().length() == 0) {
			mensajeError("Ingresar el precio del producto");
		} else {
			try {
				prec = Double.parseDouble(txtPrecio.getText());
				if (prec <= 0) {
					mensajeError("Ingresar precio mayor a 0");
					txtPrecio.setText("");
					txtPrecio.requestFocus();
					prec = -1;
				}
			} catch (NumberFormatException e) {
				mensajeError("Ingresar valores num�ricos");
				txtPrecio.setText("");
				txtPrecio.requestFocus();
				prec = -1;
				txtPrecio.setBackground(Color.RED);
				lblError.setVisible(true);
			}
		}
		return prec;
	}

	private void mensajeError(String msj) {
		JOptionPane.showMessageDialog(this, msj, "Error !!!", 0);

	}

	public void keyPressed(KeyEvent e) {
	}

	public void keyReleased(KeyEvent e) {
		if (e.getSource() == txtPrecio) {
			keyReleasedTxtPrecio(e);
		}
	}

	public void keyTyped(KeyEvent e) {
	}

	protected void keyReleasedTxtPrecio(KeyEvent e) {
		txtPrecio.setBackground(Color.WHITE);
	}
}
